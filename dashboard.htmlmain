  onAuthStateChanged,
  signOut
} from "https://www.gstatic.com/firebasejs/10.7.1/firebase-auth.js";

import {
  getFirestore,
  doc,
  setDoc,
  getDoc,
  serverTimestamp
} from "https://www.gstatic.com/firebasejs/10.7.1/firebase-firestore.js";

// ‚úÖ Firebase Config
const firebaseConfig = {
  apiKey: "AIzaSyB-wOqU0JnvWM3Nt91xhac2x_qO5a54GMQ",
  authDomain: "dinesh-3b413.firebaseapp.com",
  projectId: "dinesh-3b413",
  storageBucket: "dinesh-3b413.appspot.com",
  messagingSenderId: "1053189064237",
  appId: "1:1053189064237:web:d261dbebb5e7299e829aa4",
  measurementId: "G-FPVH4NC1ML"
};

// ‚úÖ Initialize Firebase
const app = initializeApp(firebaseConfig);
const auth = getAuth();
const db = getFirestore();

// ‚úÖ Global real server time
let realTimeGlobal = null;

// ‚úÖ Get server time from Firestore document
async function updateAndFetchServerTime() {
  try {
    const timeRef = doc(db, "getcurrenttime", "now");
    await setDoc(timeRef, { serverTime: serverTimestamp() }, { merge: true });

    const snap = await getDoc(timeRef);
    if (!snap.exists()) throw new Error("Time doc missing");
    const time = snap.data().serverTime?.toDate();
    return time;
  } catch (err) {
    console.error("Time fetch error:", err);
    return null;
  }
}

let currentUser = null;
let userData = null;
let allInterests = [];
let selectedInterests = [];
let isLoading = false;

const ACCESS_TOKEN = "EAAcSUOy3V3UBO2KQAqYBgtYgLJXhuJMZAyY60rtRsGvRdmoJJ0BBxUCGX7LvokO8R8ihqYrXoUOZCgBQxMufmu4CAvuwpnLV1nJC1KBiYd2gEvfpnQLw1uInLZCJWRs8Qx4e8Fx5EZCp0JNLCEDnStZB4fKS02gl8ZBqkuPAwhWDZBJqnkZCtxwCwqt0bXK0NPZC0";

// DOM element selectors (as before)
const userName = document.getElementById('userName');
const planBadge = document.getElementById('planBadge');
const searchesLeft = document.getElementById('searchesLeft');
const upgradeBtn = document.getElementById('upgradeBtn');
const profileBtn = document.getElementById('profileBtn');
const profileImage = document.getElementById('profileImage');
const profileInitial = document.getElementById('profileInitial');
const dropdown = document.getElementById('dropdown');
const searchInput = document.getElementById('searchInput');
const exploreBtn = document.getElementById('exploreBtn');
const resultsCount = document.getElementById('resultsCount');
const resultsBody = document.getElementById('resultsBody');
const selectedList = document.getElementById('selectedList');
const selectedCount = document.getElementById('selectedCount');
const selectAllBtn = document.getElementById('selectAllBtn');
const masterCheckbox = document.getElementById('masterCheckbox');
const clearBtn = document.getElementById('clearBtn');
const copyBtn = document.getElementById('copyBtn');
const downloadBtn = document.getElementById('downloadBtn');
const clearSelectedBtn = document.getElementById('clearSelectedBtn');
const toast = document.getElementById('toast');

// ‚úÖ Start your app after realTime fetch
document.addEventListener("DOMContentLoaded", async () => {
  realTimeGlobal = await updateAndFetchServerTime();

  if (!realTimeGlobal) {
    alert("Time fetch failed");
    return;
  }

  onAuthStateChanged(auth, async (user) => {
    if (user) {
      currentUser = user;
      await loadUserData(); // ‚úÖ Uses realTimeGlobal
      updateUI();
    } else {
      window.location.href = 'index.html';
    }
  });
});

// ‚úÖ Get user data & adjust with realTimeGlobal
async function loadUserData() {
  try {
    const userRef = doc(db, "users", currentUser.uid);
    const userSnap = await getDoc(userRef);
    const now = realTimeGlobal;
    const todayStr = now.toDateString();

    if (userSnap.exists()) {
      userData = userSnap.data();

      if (userData.planExpiry && new Date(userData.planExpiry.seconds * 1000) < now) {
        userData.currentPlan = "free";
        userData.planExpiry = null;
        await setDoc(userRef, {
          currentPlan: "free",
          planExpiry: null,
          updatedAt: serverTimestamp()
        }, { merge: true });
      }

      if (userData.lastSearchDate !== todayStr) {
        userData.searchesUsed = 0;
        userData.lastSearchDate = todayStr;
        await setDoc(userRef, {
          searchesUsed: 0,
          lastSearchDate: todayStr,
          updatedAt: serverTimestamp()
        }, { merge: true });
      }

    } else {
      userData = {
        currentPlan: "free",
        searchesUsed: 0,
        lastSearchDate: todayStr,
        createdAt: now,
        updatedAt: now
      };
      await setDoc(userRef, {
        ...userData,
        createdAt: serverTimestamp(),
        updatedAt: serverTimestamp()
      });
    }
  } catch (error) {
    console.error("Error loading user data:", error);
    showToast('Error loading user data', 'error');
  }
}
// ‚úÖ Update search count with server time
async function updateSearchCount() {
    if (!currentUser || !userData) return;

    const plan = userData.currentPlan || 'free';
    if (plan === 'monthly') return;

    const newCount = (userData.searchesUsed || 0) + 1;
    userData.searchesUsed = newCount;

    const userRef = doc(db, "users", currentUser.uid);
    await setDoc(userRef, {
        searchesUsed: newCount,
        lastSearchDate: realTimeGlobal.toDateString(),
        updatedAt: serverTimestamp()
    }, { merge: true });

    updateUI();
}

// ‚úÖ Search Interests using Facebook API
async function searchInterests() {
    if (isLoading) return;

    const query = searchInput.value.trim();
    if (!query) {
        showToast('Please enter a search term', 'error');
        return;
    }

    await loadUserData(); // make sure we have fresh user data

    const plan = (userData.currentPlan || 'free').toLowerCase();
    if (plan === 'free' && !canPerformSearch()) {
        window.location.href = 'limitexist.html';
        return;
    }

    const currentDate = realTimeGlobal.toDateString();
    if (userData.lastSearchDate !== currentDate) {
        userData.searchesUsed = 0;
        userData.lastSearchDate = currentDate;

        const userRef = doc(db, "users", currentUser.uid);
        await setDoc(userRef, {
            searchesUsed: 0,
            lastSearchDate: currentDate,
            updatedAt: serverTimestamp()
        }, { merge: true });
    }

    masterCheckbox.checked = false;
    selectedInterests = [];
    updateSelectedList();
    isLoading = true;
    exploreBtn.disabled = true;
    exploreBtn.innerHTML = '<div class="spinner"></div> Searching...';

    try {
        let allData = [];
        let nextUrl = `https://graph.facebook.com/v19.0/search?type=adinterest&q=${encodeURIComponent(query)}&limit=500&access_token=${ACCESS_TOKEN}`;

        while (nextUrl && allData.length < 1000) {
            const response = await fetch(nextUrl);
            const data = await response.json();

            if (data.error) {
                throw new Error(data.error.message);
            }

            allData = [...allData, ...(data.data || [])];
            nextUrl = data.paging && data.paging.next ? data.paging.next : null;
        }

        allInterests = allData;
        await updateSearchCount();
        displayResults();

    } catch (error) {
        console.error('Search error:', error);
        showToast('Search failed. Please try again.', 'error');
    } finally {
        isLoading = false;
        exploreBtn.disabled = false;
        exploreBtn.innerHTML = 'Search';
    }
}

// ‚úÖ Display search results
function formatAudienceSize(lower, upper) {
    const f = n => n >= 1e6 ? `${(n/1e6).toFixed(0)}M` : n >= 1e3 ? `${(n/1e3).toFixed(0)}K` : n;
    return `${f(lower || 0)} - ${f(upper || 0)}`;
}

function displayResults() {
    resultsCount.textContent = `Search Results: ${allInterests.length}`;
    if (!allInterests.length)
        return resultsBody.innerHTML = `<div class='empty-state'><h3>No results found</h3><p>Try different keywords</p></div>`;

    resultsBody.innerHTML = allInterests.map((item, i) => `
        <div class="table-row" data-index="${i}" onclick="toggleInterestRow(${i})" style="cursor:pointer">
            <div><input type="checkbox" class="checkbox" onclick="event.stopPropagation();" onchange="toggleInterestFromCheckbox(${i}, this.checked)"></div>
            <div>${i + 1}</div>
            <div class="interest-name">${escapeHtml(item.name.replace(/\s*\(.*?\)\s*/g, '').trim())}</div>
            <div>${formatAudienceSize(item.audience_size_lower_bound, item.audience_size_upper_bound)}</div>
            <div>${item.topic || 'N/A'}</div>
        </div>`).join('');
}

function escapeHtml(txt) { const el = document.createElement("div"); el.textContent = txt; return el.innerHTML; }

function toggleInterestRow(i) {
    if (i < 0 || i >= allInterests.length) return;
    const row = document.querySelector(`[data-index="${i}"]`);
    const checkbox = row.querySelector('.checkbox');
    checkbox.checked = !checkbox.checked;
    toggleInterestFromCheckbox(i, checkbox.checked);
}

function toggleInterestFromCheckbox(i, checked) {
    const interest = allInterests[i];
    if (checked) {
        if (!selectedInterests.some(s => s.id === interest.id)) {
            selectedInterests.push(interest);
        }
    } else {
        selectedInterests = selectedInterests.filter(s => s.id !== interest.id);
    }
    updateSelectedList();
    showToast(`${interest.name} ${checked ? 'selected' : 'removed'}`);
}

function updateSelectedList() {
    selectedCount.textContent = selectedInterests.length;
    const allSelected = selectedInterests.length === allInterests.length;
    if (masterCheckbox) masterCheckbox.checked = allSelected;

    if (!selectedInterests.length) {
        return selectedList.innerHTML = `<div class="empty-state"><h4>No interests selected</h4><p>Select interests from the left to see them here</p></div>`;
    }

    selectedList.innerHTML = selectedInterests.map(item => `
        <div class="selected-item">
            <span>${escapeHtml(item.name.replace(/\s*\(.*?\)\s*/g, '').trim())}</span>
            <button class="remove-btn" onclick="removeInterest('${item.id}')">√ó</button>
        </div>`).join('');
}

function removeInterest(id) {
    selectedInterests = selectedInterests.filter(i => i.id !== id);
    const i = allInterests.findIndex(it => it.id === id);
    if (i !== -1) {
        const cb = document.querySelector(`[data-index="${i}"] .checkbox`);
        if (cb) cb.checked = false;
    }
    updateSelectedList();
}

function selectAll() {
    if (!allInterests.length) return showToast('No interests found to select', 'error');
    allInterests.forEach((i, idx) => {
        const cb = document.querySelector(`[data-index="${idx}"] .checkbox`);
        if (cb) cb.checked = true;
    });
    selectedInterests = [...allInterests];
    updateSelectedList();
    showToast(`All ${allInterests.length} interests selected`);
}

function clearSelected() {
    selectedInterests = [];
    document.querySelectorAll('.checkbox').forEach(cb => cb.checked = false);
    updateSelectedList();
    showToast('Selected interests cleared');
}

function copySelected() {
    if (!selectedInterests.length) return showToast('No interests to copy', 'error');
    const text = selectedInterests.map(i => i.name.replace(/\s*\(.*?\)\s*/g, '').trim()).join(', ');
    navigator.clipboard.writeText(text).then(() => showToast(`${selectedInterests.length} interests copied`));
}

function downloadSelected() {
    if (!selectedInterests.length) return showToast('No interests selected to download', 'error');
    const keyword = searchInput.value.trim() || 'interests';
    const text = selectedInterests.map((i, idx) => `${idx + 1}. ${i.name.replace(/\s*\(.*?\)\s*/g, '').trim()}`).join('\n');
    const copyReady = selectedInterests.map(i => i.name.replace(/\s*\(.*?\)\s*/g, '').trim()).join(', ');
    const blob = new Blob([`Total: ${selectedInterests.length} interests\n\n${text}\n\nCopy-ready:\n${copyReady}`], { type: 'text/plain' });

    const a = document.createElement('a');
    a.href = URL.createObjectURL(blob);
    a.download = `${keyword}_interests.txt`;
    a.click();
    URL.revokeObjectURL(a.href);
    showToast('Downloaded successfully');
}

function clearSelection() {
    selectedInterests = [];
    document.querySelectorAll('.checkbox').forEach(cb => cb.checked = false);
    updateSelectedList();
}

function showToast(txt, type = 'success') {
    toast.textContent = txt;
    toast.className = `toast ${type}`;
    toast.classList.add('show');
    setTimeout(() => toast.classList.remove('show'), 3000);
}

// Events
exploreBtn.addEventListener('click', searchInterests);
searchInput.addEventListener('keypress', e => {
    if (e.key === 'Enter') searchInterests();
});
selectAllBtn.addEventListener('click', selectAll);
clearBtn.addEventListener('click', clearSelection);
copyBtn.addEventListener('click', copySelected);
downloadBtn.addEventListener('click', downloadSelected);
clearSelectedBtn.addEventListener('click', clearSelected);
upgradeBtn.addEventListener('click', () => window.location.href = 'plans.html');
profileBtn.addEventListener('click', e => {
    e.stopPropagation();
    dropdown.classList.toggle('show');
});
document.addEventListener('click', e => {
    if (!dropdown.contains(e.target) && !profileBtn.contains(e.target)) dropdown.classList.remove('show');
});

// Logout function
window.logout = async () => {
    try {
        await signOut(auth);
        window.location.href = 'index.html';
    } catch (e) {
        showToast('Logout failed', 'error');
    }
};

// Theme handling (unchanged)
const darkStyle = document.getElementById("darkStyle");
const lightStyle = document.getElementById("lightStyle");
const themeBtn = document.getElementById("themeToggleBtn");
const themeIcon = document.getElementById("themeIcon");

const savedTheme = localStorage.getItem("theme");
if (savedTheme === "light") {
    darkStyle.disabled = true;
    lightStyle.disabled = false;
    themeIcon.src = "moon.svg";
} else {
    darkStyle.disabled = false;
    lightStyle.disabled = true;
    themeIcon.src = "sun.svg";
}

themeBtn.addEventListener("click", () => {
    const isDark = !darkStyle.disabled;
    darkStyle.disabled = isDark;
    lightStyle.disabled = !isDark;
    themeIcon.src = isDark ? "moon.svg" : "sun.svg";
    localStorage.setItem("theme", isDark ? "light" : "dark");
});

window.toggleInterestRow = toggleInterestRow;
window.toggleInterestFromCheckbox = toggleInterestFromCheckbox;
window.removeInterest = removeInterest;
window.clearSelection = clearSelection;
window.clearSelected = clearSelected;
window.copySelected = copySelected;
window.downloadSelected = downloadSelected;
window.selectAll = selectAll;
</script>





